#!/bin/sh


case "$1" in
    lock)
        betterlockscreen -l
        ;;
    logout)
       	mpc pause && i3-msg exit
        ;;
    suspend)
        mpc pause && i3lock -B=sigma -k -e | systemctl suspend
        ;;
    hibernate)
        systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
